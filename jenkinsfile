pipeline {
    agent { label "demo-kokila-agent" }

    tools {
        maven "M3"
    }

    stages {
        stage('Create Directories') {
            steps {
                sh '''
                    mkdir -p /home/kokila
                    mkdir -p /home/gowda
                '''
            }
        }

        stage('Create File') {
            steps {
                sh '''
                    cd /home/kokila
                    touch abc.txt
                '''
            }
        }

        stage('Copy File') {
            steps {
                sh '''
                    cp /home/kokila/abc.txt /home/gowda/
                '''
            }
        }
    }
}
