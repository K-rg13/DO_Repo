pipeline {

    agent { label "demo-kokila-agent" }
 
    parameters {

        string(name: 'SOURCE_DIR', defaultValue: '/tmp/source', description: 'Source folder path')

        string(name: 'DEST_DIR', defaultValue: '/tmp/destination', description: 'Destination folder path')

        string(name: 'FILE_NAME', defaultValue: 'file.txt', description: 'File name to copy')

    }
 
    stages {

        stage('Show Inputs') {

            steps {

                echo "Source Folder: ${params.SOURCE_DIR}"

                echo "Destination Folder: ${params.DEST_DIR}"

                echo "File to copy: ${params.FILE_NAME}"

            }

        }
 
        stage('Copy File') {

            steps {

                sh '''

                    echo "Copying file..."

                    cp -r "${SOURCE_DIR}/${FILE_NAME}" "${DEST_DIR}/"

                    echo "File copied successfully."

                '''

            }

        }

    }

}

 

